<% include partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/show.css">

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Photography</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <h4><%= photography.name %></h4>
            <div class="img-thumbnail">
                <img class="img-fluid" src="<%= photography.image %>">
            </div>
            <p><%= photography.description %></p>
            <div class="card card-body bg-light">
                <div class="text-right">
                    <p><a href="/photography/<%= photography._id %>/comments/new" class="btn btn-info">Add Comment</a></p>
                </div>
                <hr>
                <% photography.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">5 days ago</span>
                            <p>
                                <%= comment.comment %>
                            </p>
                            <a class="btn btn-sm btn-info" 
                            href="/photography/<%= photography._id %>/comments/<%= comment._id %>/edit">
                            Edit</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>    
    <% include partials/footer %>